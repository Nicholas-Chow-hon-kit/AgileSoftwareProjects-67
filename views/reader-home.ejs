<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <meta name="Food Haven Homepage" content="Food Haven Homepage" />
  <meta name="author" content="Agile Group 67" />
  <meta name="robots" content="index, follow" />
    <link rel="stylesheet" type="text/css" href="/stylesheets/styles.css" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9"
      crossorigin="anonymous"
    />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css"
    />
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm"
      crossorigin="anonymous"
    ></script>  
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">

    <title>Food Haven</title>
</head>
<body>
  <%- include('navigation.ejs') %>
    <!-- masthead code -->
    <div id="masthead" class="masthead-container">
        <div id="start">
          <div id="tag">
            <h3>Microblogger:</h3>
          </div>
          <div id="page type">
            <p>Reader Homepage</p>
          </div>
        </div>
        <div id="end">
          <a href="/register">Register </a><p> / </p><a href="/login"> Login</a>
        </div>
      </div>
      <!-- End of masthead code -->
  
      <!-- banner code -->
      <div id="banner" class="banner-container">
          <div id="bannerHeader">     
              <p><%= bannerSettingsData.banner_header %></p>
          </div>
          <div id="bannerSubheader">
              <p><%= bannerSettingsData.banner_subheader %></p>
          </div>
          <div id="authorName">
              <p><%= bannerSettingsData.author_name %></p>
          </div>
      </div>
      <!-- End of banner code -->

      <!-- published articles sections -->
      <div id="articleSection">
        <h2>Articles:</h2>
        <% if (publishedArticles && publishedArticles.length > 0) { %>
            <% publishedArticles.forEach(article => { %>
              <a href="/reader/article?id=<%= article.id %>" class="article-container">
                <h3><%= article.title %></h3>
                <h4><%= article.subtitle %></h4>
                <p><%= article.published %></p>
              </a>
            <% }) %>
          <% } else { %>
            <p>No published articles found.</p>
          <% } %>
      </div>
      <!-- end of published articles sections -->
      <%- include('footer.ejs') %>
</body>
</html>