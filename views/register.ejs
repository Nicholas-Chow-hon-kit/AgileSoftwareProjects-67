<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('head.ejs') %>
  </head>
  <body>
    <%- include('navigation-landing.ejs') %>
    <div class="container d-flex justify-content-center text-center" style="padding-top:70px;">
      <div class="col-md-8 col-lg-4">
        <form>
          <img
            src="/images/FoodHavenLogo.png"
            class="img-fluid"
            alt="Sample image"
            style="width: 50%;"
          />
          <!-- Name input -->
          <div class="form-outline my-4 d-flex justify-content-end">
            <div class="d-flex flex-column align-items-start">
              <label class="form-label fw-bold" for="firstname">First Name: </label>
              <input
                type="text"
                id="firstnameForm"
                class="form-control form-control-lg"
                placeholder="Enter first name"
              />
            </div>
            <div class="d-flex flex-column align-items-start" style="margin-left: 10px;">
              <label class="form-label fw-bold" for="lastname">Last Name: </label>
              <input
                type="text"
                id="lastnameForm"
                class="form-control form-control-lg"
                placeholder="Enter last name"
              />
            </div>
          </div>
          
          <!-- Email input -->
          <div class="form-outline mb-4 text-left">
            <label class="form-label fw-bold" for="email">Email address: </label>
            <input
              type="email"
              id="emailForm"
              class="form-control form-control-lg"
              placeholder="Enter a valid email address"
            />
          </div>
        
          <!-- Password input -->
          <div class="form-outline mb-4 text-left">
            <label class="form-label fw-bold" for="password">Password: </label>
            <input
              type="password"
              id="passwordForm"
              class="form-control form-control-lg"
              placeholder="Enter password"
            />
          </div>
        
          <div class="d-flex justify-content-between align-items-center">
            <!-- Checkbox -->
            <div class="form-check mb-0">
              <input
                class="form-check-input me-2 rememberCheckbox"
                type="checkbox"
                value=""
                id="form2Example3"
              />
              <label class="form-check-label" for="rememberCheckbox">
                Remember me
              </label>
            </div>
            <a href="#!" class="text-body">Forgot password?</a>
          </div>
          
          <div class="text-center text-lg-start mt-2 pt-2 register-button" style="display: flex; flex-direction: column; align-items: center;">
            <button
              type="button"
              class="btn btn-primary btn-lg"
              style="width: 40%;"
            >
              Register
            </button>
            <p class="small fw-bold mt-2 pt-1">
              Already have an account? <a href="login" class="link-danger">Login here!</a>
            </p>
          </div>
        </form>
      </div>
    </div>
    <%- include('footer.ejs') %>
  </body>
</html>
