<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('head.ejs') %>
  </head>
  <body>
    <div class=" d-flex justify-content-end mt-2">
      <a href="landing" style="text-decoration: none; margin-right: 2%;">
        <p>Back</p>
      </a>
    </div>
    <div class="container d-flex justify-content-center">
      <div class="col-md-8 col-lg-3" style="margin-top: -4%; ">
        <form action="/login" method="POST">
          <img
            src="/images/FoodHavenLogoBlack.png"
            class="img-fluid"
            alt="Sample image"
          />
          <!-- Username input -->
          <div class="form-outline mb-4">
            <label class="form-label fw-bold" for="username">Username: </label>
            <input
              type="username"
              id="username"
              name="username"
              class="form-control form-control-lg"
              placeholder="Please enter your username"
              required
            />
          </div>
        
          <!-- Password input -->
          <div class="form-outline mb-3">
            <label class="form-label fw-bold" for="password">Password: </label>
            <input
              type="password"
              id="password"
              name="password"
              class="form-control form-control-lg"
              placeholder="Please enter your password"
              required
            />
          </div>

          <div class="error-message mb-3" style="color: red;">
            <% if(messages.error) {%>
              <%= messages.error %>
            <% } %>
          </div>
          
        
          <div class="d-flex justify-content-between align-items-center">
            <!-- Checkbox -->
            <div class="form-check mb-0">
              <input
                class="form-check-input me-2 rememberCheckbox"
                type="rememberCheckbox"
                value=""
                id="form2Example3"
                name="rememberCheckbox"
              />
              <label class="form-check-label" for="rememberCheckbox">
                Remember me
              </label>
            </div>
            <a href="#!" class="text-body">Forgot password?</a>
          </div>
          
          <div class="text-center text-lg-start mt-2 pt-2 login-button" style="display: flex; flex-direction: column; align-items: center;">
            <button
              type="submit"
              class="btn btn-primary btn-lg"
              style="width: 40%;"
            >
              Login
            </button>
            <p class="small fw-bold mt-2 pt-1 mb-2">
              Don't have an account? <a href="register" class="link-danger">Register here!</a>
            </p>
          </div>
        </form>
      </div>
    </div>
    <%- include('footer.ejs') %>
  </body>
</html>
