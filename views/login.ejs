<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('head.ejs') %>
  </head>
  <body>
    <%- include('navigation-landing.ejs') %>
    <div class="container d-flex justify-content-center text-center" style="padding-top:70px;">
      <div class="col-md-8 col-lg-3 mb-4">
        <form>
          <img
            src="/images/FoodHavenLogo.png"
            class="img-fluid mb-4"
            alt="Sample image"
            style="width: 50%;"
          />
          <!-- Email input -->
          <div class="form-outline mb-4">
            <label class="form-label fw-bold text-left" for="email">Email address: </label>
            <input
              type="email"
              id="emailForm"
              class="form-control form-control-lg"
              placeholder="Enter a valid email address"
            />
          </div>
        
          <!-- Password input -->
          <div class="form-outline mb-3">
            <label class="form-label fw-bold text-left" for="password">Password: </label>
            <input
              type="password"
              id="passwordForm"
              class="form-control form-control-lg"
              placeholder="Enter password"
            />
          </div>
        
          <div class="d-flex justify-content-between align-items-center">
            <!-- Checkbox -->
            <div class="form-check mb-0">
              <input
                class="form-check-input me-2 rememberCheckbox"
                type="checkbox"
                value=""
                id="form2Example3"
              />
              <label class="form-check-label" for="rememberCheckbox">
                Remember me
              </label>
            </div>
            <a href="#!" class="text-body">Forgot password?</a>
          </div>
          
          <div class="text-center text-lg-start mt-2 pt-2 login-button" style="display: flex; flex-direction: column; align-items: center;">
            <button
              type="button"
              class="btn btn-primary btn-lg"
              style="width: 40%;"
            >
              Login
            </button>
            <p class="small fw-bold mt-2 pt-1">
              Don't have an account? <a href="register" class="link-danger">Register here!</a>
            </p>
          </div>
        </form>
      </div>
    </div>
    <%- include('footer.ejs') %>
  </body>
</html>
